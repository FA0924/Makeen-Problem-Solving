namespace assignment01
{
    internal class Program
    {
        public static void Main()
        {
            Console.WriteLine("the first 10 powers of 2 numbers are:");
            for (int i = 0; i < 10; i++)
            {
                
                int powers = (int)Math.Pow(2, i);
                Console.WriteLine(powers);

            }

        }

    }

}



