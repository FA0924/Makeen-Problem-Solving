// question 4
namespace assignment01
{
    internal class Program
    {
        public static void Main()
        {
            int[] numbers = { 34, 48, 284, 27, 38, 46, 20 };
            int maxnum = numbers[0];

            for (int i = 1; i < numbers.Length; i++) {
                if (numbers[i] > maxnum)
                {
                    maxnum = numbers[i];
                }
            }
            Console.WriteLine(maxnum);
        }
    }
}


