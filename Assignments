namespace assignment01
{
    internal class Program
    {
        public static void Main()
        {
            int stars = 5;
            for (int i = 0; i < stars; i++)
            {
                for (int j = 0; j < stars; j++) 
                {
                    Console.Write(" * " );
                    
                }

                Console.WriteLine("  ");
            }
            
        }
            
    }
}




