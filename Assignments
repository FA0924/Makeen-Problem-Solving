// question 1
namespace assignment01 
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("the even numbers between 1 & 10 are:");
            for (int i = 1; i < 10; i++)
            {
                if (i % 2 == 0)
                {
                    Console.WriteLine(i);
                }
            }

        }

    }

}

