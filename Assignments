// question 10


namespace assignment01
{
    internal class Program
    {
        public static void Main()
        {
            int sum = 0;

            for (int i = 2; i < 101; i += 2)
            {
                sum += i;
            }
            Console.WriteLine("the sum of all even numbers from 2 to 100 is ");
            Console.WriteLine(sum);

        }
    }
}








