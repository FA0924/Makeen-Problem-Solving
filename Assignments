namespace assignment01
{
    internal class Program
    {
        public static void Main()
        {
            Console.WriteLine("the first 15 fibonacci numbers are:");
            int a = 0, b = 1;
            for (int i = 0; i < 15; i++)
            {

                Console.WriteLine(a);
                int sth = a;
                a = b;
                b = sth + b;

            }

        }

    }

}


