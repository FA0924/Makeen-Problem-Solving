// question 8

namespace assignment01
{
    internal class Program
    {
        public static void Main()
        {
            Console.Write("enter string:");
            string input = Console.ReadLine();

            string reversed = reversedinput(input);

            Console.WriteLine(input);
            Console.WriteLine(reversed);
            
        }
            static string reversedinput(string str)
        {
            string output = "";
            for (int i = str.Length -1 ; i >= 0; i--) { // length - 1 is last index and --1 moves backword through the string
                output += str[i]; // accesses the index i charcater
            }
            return output;
        }
    }
}








